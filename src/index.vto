<h3>Architecture Progression</h3>
<div style="overflow-x: auto; margin: 1rem 0;">
  <table style="width: 100%; border-collapse: collapse; font-size: 0.875rem; background: white;">
    <thead>
      <tr style="background: #f8fafc;">
        <th style="padding: 0.75rem; text-align: left; border: 1px solid #e2e8f0;">Level</th>
        <th style="padding: 0.75rem; text-align: left; border: 1px solid #e2e8f0;">Strategy</th>
        <th style="padding: 0.75rem; text-align: right; border: 1px solid #e2e8f0;">Bundle Size</th>
        <th style="padding: 0.75rem; text-align: left; border: 1px solid #e2e8f0;">Description</th>
      </tr>
    </thead>
    <tbody>
      {{ for arch of architectureLevels }}
        {{ set totalSize = arch.js + arch.framework + arch.components }}
        {{ set rowColor = arch.level === 0 ? '#f0f9ff' : arch.level === 1 ? '#fffbeb' : arch.level === 2 ? '#dcfce7' : '#f3e8ff' }}
        <tr style="background: {{ rowColor }};">
          <td style="padding: 0.75rem; border: 1px solid #e2e8f0; font-weight: bold;">{{ arch.level }}</td>
          <td style="padding: 0.75rem; border: 1px solid #e2e8f0;">{{ arch.name }}</td>
          <td style="padding: 0.75rem; border: 1px solid #e2e8f0; text-align: right; font-family: monospace;">
            {{ formatFileSize(totalSize) }}
          </td>
          <td style="padding: 0.75rem; border: 1px solid #e2e8f0; color: #4b5563;">{{ arch.description }}</td>
        </tr>
      {{ /for }}
    </tbody>
  </table>
</div>

